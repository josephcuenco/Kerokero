<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="KeroKero.Pages.SignUpPage"
             Title="SignUpPage">
    
    <VerticalStackLayout Padding="30" Spacing="10">

        <Entry x:Name="UsernameEntry" Placeholder="Username" />
        <Entry x:Name="PasswordEntry" Placeholder="Password" IsPassword="True" />
        <Entry x:Name="ConfirmPasswordEntry" Placeholder="Confirm Password" IsPassword="True"/>
        <Button Text="Sign up" Clicked="OnSignUpButtonClicked" />
        <Label x:Name="SignUpStatusLabel" TextColor="Red" />


    </VerticalStackLayout>
    
</ContentPage>