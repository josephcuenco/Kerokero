<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:maps="clr-namespace:Microsoft.Maui.Controls.Maps;assembly=Microsoft.Maui.Controls.Maps"
             x:Class="KeroKero.Pages.MapPage"
             Title="">

    <Grid>
        <maps:Map x:Name="map" IsTrafficEnabled="false" IsShowingUser="true" MapType="Street"/>
        <Label x:Name="durationLabel"
           Text="Duration: "
           FontSize="20"
           TextColor="Black"
           BackgroundColor="White"
           Padding="10"
           HorizontalOptions="Center"
           VerticalOptions="Start"
           IsVisible="False" />
        <Label x:Name="directions"
            Text="Direction: "
            FontSize="20"
            TextColor="Black"
            BackgroundColor="White"
            Padding="20"
            
            HorizontalOptions="Center"
            VerticalOptions="Start"
            IsVisible="False" />
        <Button
            Text="Home" 
            Command="{Binding HomeBtn}" 
            FontSize="20"
            CornerRadius="20"/>
    </Grid>


    
    

</ContentPage>